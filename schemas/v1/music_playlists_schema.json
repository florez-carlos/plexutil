{
  "$id": "./schemas/v1/music_playlists_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "trackCount": {
      "type": "integer",
      "minimum": 0
    },
    "playlists": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "playlistName": {
            "type": "string",
            "minLength": 1
          },
          "songs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fileName": {
                  "type": "string"
                }
              },
              "required": ["fileName"]
            }
          }
        },
        "required": ["playlistName", "songs"]
      }
    }
  },
  "required": ["trackCount", "playlists"]
}

